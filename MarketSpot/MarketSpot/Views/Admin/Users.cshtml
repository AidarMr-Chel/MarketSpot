
@model IQueryable<MarketSpot.Core.Entities.ApplicationUser>

<h2>Пользователи</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Имя</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>
                    <form method="post" asp-action="DeleteUser" asp-route-id="@user.Id" onsubmit="return confirm('Удалить пользователя?');" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                    </form>
                    <a asp-action="UserProducts" asp-route-userId="@user.Id" class="btn btn-primary btn-sm">Продукты</a>
                </td>
            </tr>
        }
    </tbody>
</table>
